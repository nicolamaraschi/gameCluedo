{
  "name": "cluedo-multiplayer",
  "version": "1.0.0",
  "description": "Gioco di Cluedo multiplayer con React e Node.js",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/server.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "dev": "nodemon server/server.js"
  },
  "keywords": [
    "cluedo",
    "gioco",
    "multiplayer",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
